@model IEnumerable<Restaurant.Models.FoodChain>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Search By Restaurant Name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="search-btn" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSort"]">@Html.DisplayNameFor(model => model.FoodChainName)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuLink)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["GFSort"]">@Html.DisplayNameFor(model => model.GlutenFreeOptions)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["VegeSort"]">@Html.DisplayNameFor(model => model.VegetarianOptions)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["VeganSort"]">@Html.DisplayNameFor(model => model.VeganOptions)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DFSort"]">@Html.DisplayNameFor(model => model.DairyFreeOptions)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NFSort"]">@Html.DisplayNameFor(model => model.NutFreeOptions)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OtherOptions)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FoodChainName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MenuLink)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GlutenFreeOptions)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VegetarianOptions)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VeganOptions)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DairyFreeOptions)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NutFreeOptions)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OtherOptions)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.FoodChainID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.FoodChainID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.FoodChainID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
